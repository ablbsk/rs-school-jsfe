{
  "tabWidth": 2,
  "printWidth": 120,
  "semi": false,
  "trailingComma": "none",
  "overrides": [
    {
      "files": ["*.html", "*.scss"],
      "options": {
        "singleQuote": false
      }
    },
    {
      "files": ["*.js", "*.ts"],
      "options": {
        "arrowParens": "always",
        "singleQuote": true
      }
    }
  ]
}
