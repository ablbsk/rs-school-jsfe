{
  "tabWidth": 2,
  "printWidth": 120,
  "overrides": [
    {
      "files": ["*.html", "*.scss"],
      "options": {
        "singleQuote": false
      }
    },
    {
      "files": ["*.js", "*.ts"],
      "options": {
        "semi": true,
        "trailingComma": "es5",
        "arrowParens": "always",
        "singleQuote": true
      }
    }
  ]
}
